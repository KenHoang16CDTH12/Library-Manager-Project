<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml"
            fx:controller="kenhoang.controller.ControllerLogin">
    <top>
        <Label fx:id="lblTitle" styleClass="lblTitle" text="Thư viện HueIC" BorderPane.alignment="CENTER"
        >
         <BorderPane.margin>
            <Insets bottom="20.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
        </Label>
    </top>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
    <left>
        <ImageView fx:id="ImgHueIC"
                   fitWidth="330.0"
                   fitHeight="225.0">
            <image>
                <Image url="/img/hueic.png" />
            </image>
        </ImageView>
    </left>

    <center>
        <StackPane>
            <VBox>
                    <GridPane
                            hgap="10"
                            vgap="5">
                    <Label
                    fx:id="lblUserName"
                    text="Tài khoản: "
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="8"
                    styleClass="User"/>
                    <TextField
                    fx:id="txtUsername"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="8"
                    styleClass="text-field"
                    />
                    </GridPane>
                <GridPane
                        hgap="10"
                        vgap="5">
                    <Label
                            fx:id="lblPassword"
                            text="Mật khẩu : "
                            GridPane.columnIndex="0"
                            GridPane.rowIndex="2"
                            styleClass="User"/>
                    <PasswordField
                            fx:id="txtPassword"
                            GridPane.columnIndex="1"
                            GridPane.rowIndex="2"
                            styleClass="text-field"
                            />
                </GridPane>
                <GridPane
                hgap="10"
                vgap="5">
                    <CheckBox
                            fx:id="chkSave"
                            text="Lưu thông tin đăng nhập."
                            GridPane.columnIndex="7"
                            GridPane.rowIndex="2"
                            styleClass="check-box"
                    />
                </GridPane>
                <HBox>
                    <GridPane
                            hgap="10"
                            vgap="10">

                        <Button fx:id="btnLogin"
                                styleClass="record-sales"
                                GridPane.columnIndex="8"
                                GridPane.rowIndex="1"
                                onAction="#handleLogin">
                            <graphic>
                                <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mouseTransparent="true">
                                    <children>
                                        <ImageView>
                                            <image>
                                                <Image url="/img/login.png" />
                                            </image>
                                        </ImageView>
                                        <Label text=" Login">
                                            </Label>
                                        <Pane HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                            </graphic>
                        </Button>
                        <Button  GridPane.columnIndex="9"
                                 GridPane.rowIndex="1"
                                 fx:id="btnExit"
                                 styleClass="record-sales"
                                 onAction="#handleExit">
                            <graphic>
                                <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mouseTransparent="true">
                                    <children>
                                        <ImageView>
                                            <image>
                                                <Image url="/img/exit.png" />
                                            </image>
                                        </ImageView>
                                        <Label text=" Exit">
                                        </Label>
                                        <Pane HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                            </graphic>
                        </Button>
                    </GridPane>
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
